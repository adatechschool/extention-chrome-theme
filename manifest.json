{
    "name": "landing-page",
    "description": "Remplace la page nouvel onglet par une page personnalisée",
    "version": "1.0",
    "manifest_version": 3,

    // Cette clé permet d'indiquer à Chrome que vous souhaitez remplacer une de ses pages par défaut.
    "chrome_url_overrides": {
        "newtab": "page.html"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "index.html"
    }
  }
